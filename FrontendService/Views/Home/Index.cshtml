@{
    ViewData["Title"] = "Contacts";
}

<div class="container mt-5">
    <h1 class="mb-4">Contacts</h1>

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by Name">
    </div>

    <form enctype="multipart/form-data" method="post" class="mb-3 d-flex">
        <input type="file" id="fileInput" name="file" accept=".csv" class="form-control me-2" />
        <button type="button" id="uploadButton" class="btn btn-outline-primary">Upload</button>
    </form>

    <table id="contactsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th id="nameHeader" class="sortable">Name</th>
                <th id="dobHeader" class="sortable">Date</th>
                <th id="marriedHeader" class="sortable">Married</th>
                <th id="phoneHeader" class="sortable">Phone</th>
                <th id="salaryHeader" class="sortable">Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="contactsBody">
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="~/css/styles.css">
<script src="~/js/script.js"></script>